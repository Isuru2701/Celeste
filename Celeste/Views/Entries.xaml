<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Celeste.Views"
      xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="Celeste.Views.Entries"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Entries"
      Background="#1e1730">

    <Grid>

        <StackPanel>


            <ListBox x:Name="Container">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}" 
                            Click="Button_Click">

                            <Button.Style>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ListbuttonTheme}">
                                    <Setter Property="FontSize" Value="20"/>
                                </Style>
                            </Button.Style>

                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


        </StackPanel>
    </Grid>
</Page>

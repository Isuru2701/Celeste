<Page x:Class="Celeste.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"      
      xmlns:lottie="clr-namespace:LottieSharp;assembly=LottieSharp"
      mc:Ignorable="d" 
              Title="Celeste" 
        Height="{x:Static SystemParameters.PrimaryScreenHeight}" 
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        Background="#FF1E1730"
      Loaded="Page_Loaded">
    <Page.Resources>
        <Storyboard x:Key="WriterLines" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="1.24"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="0.52"/>
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="0.076"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="48"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="292.8"/>
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="381.6"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line1" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="0.132"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line1" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="383.225"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line2" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0.352"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="0.652"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="1.42"/>
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="0.316"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line2" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-100.8"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="-40.8"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="112.8"/>
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="333.6"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line3" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0.328"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="0.868"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="1.444"/>
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="0.724"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line3" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-134.4"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="-26.4"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="88.8"/>
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="232.8"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line4" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0.544"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="0.904"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="1.432"/>
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="0.412"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="line4" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-91.2"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="-19.2"/>
                <EasingDoubleKeyFrame KeyTime="00:00:02" Value="86.4"/>
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="290.4"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>


    <Border
        BorderBrush="#d8c6a0"
        BorderThickness="5">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Margin="0,30,0,30"
                    BorderBrush="#d8c6a0"
                    BorderThickness="0,5,5,5"
                    CornerRadius="0,30,30,0" x:Name="writer">

                <Grid>

                    <Button x:Name="btn_writer"
                        Width="{Binding ElementName=writer, Path=ActualWidth}"
                        Height="{Binding ElementName=writer, Path=ActualHeight}"
                        Background="Transparent"
                        Click="btn_writer_Click"
                        Style="{StaticResource DiamondButtonTheme}">
                    </Button>
                    <Label Content="Write here . . ."
                           Foreground="#a1a1a1"
                           Margin="20"
                           FontSize="30"
                           FontStyle="Italic"
                           FontWeight="Light"></Label>

                    <Canvas IsHitTestVisible="False">
                        <Line x:Name="line" X1="50" Y1="400" X2="400" Y2="400" 
                     Stroke="#d8c6a0"
                      StrokeThickness="7"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Line.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Line.RenderTransform>
                        </Line>

                        <Line x:Name="line1" X1="50" Y1="450" X2="400" Y2="450" 
                     Stroke="#d8c6a0"
                      StrokeThickness="7"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Line.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Line.RenderTransform>
                        </Line>

                        <Line x:Name="line2" X1="50" Y1="500" X2="400" Y2="500" 
                     Stroke="#d8c6a0"
                      StrokeThickness="7"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Line.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Line.RenderTransform>
                        </Line>

                        <Line x:Name="line3" X1="50" Y1="550" X2="400" Y2="550" 
                     Stroke="#d8c6a0"
                      StrokeThickness="7"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Line.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Line.RenderTransform>
                        </Line>

                        <Line x:Name="line4" X1="50" Y1="600" X2="400" Y2="600" 
                     Stroke="#d8c6a0"
                      StrokeThickness="7"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Line.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Line.RenderTransform>
                        </Line>




                    </Canvas>


                </Grid>



            </Border>

            <Button
                x:Name="btn_user"
                Grid.Column="1"
                Width="70"
                Height="70"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="20,20,0,0"
                Background="Transparent"
                RenderTransformOrigin="0.5, 0.5"
                Click="btn_user_Click"
                ToolTip="View Profile">
                <Button.LayoutTransform>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="45"/>
                </Button.LayoutTransform>

                <Button.Style>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DiamondButtonTheme}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border BorderBrush="#d8c6a0" BorderThickness="10" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <!-- event triggers examples

                        <Style.Triggers>
                            <EventTrigger RoutedEvent="Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation To="56"
                                                         Storyboard.TargetProperty="RenderTransform.(RotateTransform.Angle)"
                                                         Duration="0:0:10">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                -->
                    </Style>
                </Button.Style>

                <Image Source="../Resources/logo(minimal).png"/>
            </Button>


            <Grid Grid.Column="1">

                <Canvas IsHitTestVisible="False"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <!--LEFT-->
                    <Line X1="-100" Y1="0"
                      X2="-225" Y2="0" 
                      Stroke="#d8c6a0"
                      StrokeThickness="4" 
                      Canvas.Left="2">

                        <Line.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation From="-100" To="-225" Duration="0:0:0.5" 
                                    Storyboard.TargetProperty="(Line.X2)"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>
                        </Line.Triggers>


                    </Line>



                    <!--RIGHT-->
                    <Line X1="100" Y1="0"
                      X2="225" Y2="0" 
                      Stroke="#d8c6a0"
                      StrokeThickness="4" 
                      Canvas.Left="2">

                        <Line.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation From="100" To="225" Duration="0:0:0.5" 
                                    Storyboard.TargetProperty="(Line.X2)"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>

                        </Line.Triggers>

                    </Line>


                    <!--UP-->
                    <Line X1="4" Y1="-100"
                      X2="4" Y2="-250" 
                      Stroke="#d8c6a0"
                      StrokeThickness="4" 
                      Canvas.Left="2">

                        <Line.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation From="-100" To="-250" Duration="0:0:0.5" 
                                    Storyboard.TargetProperty="(Line.Y2)"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>

                        </Line.Triggers>

                    </Line>

                    <!--DOWN-->
                    <Line X1="4" Y1="100"
                      X2="4" Y2="250" 
                      Stroke="#d8c6a0"
                      StrokeThickness="4" 
                      Canvas.Left="2">

                        <Line.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation From="100" To="250" Duration="0:0:0.5" 
                                    Storyboard.TargetProperty="(Line.Y2)"/>
                                    </Storyboard>

                                </BeginStoryboard>
                            </EventTrigger>

                        </Line.Triggers>


                    </Line>


                </Canvas>

                <DockPanel Grid.Column="1" >


                    <Button x:Name="btn_resources" DockPanel.Dock="Top" Margin="14,120,10,9"
                        Click="btn_resources_Click"
                        ToolTip="Resources"
                        Style="{StaticResource DiamondButtonTheme}">
                        <Image Source="../Resources/resources_btn.png"/>
                    </Button>

                    <Button x:Name="btn_notification" DockPanel.Dock="Bottom"  Margin="14,9,10,120"
                        ToolTip="Set Notification"
                        Click="btn_notification_Click"
                        Style="{StaticResource DiamondButtonTheme}">
                        <Image Source="../Resources/timer_btn.png"></Image>

                    </Button>

                    <Button x:Name="btn_entries" DockPanel.Dock="Left" Margin="130,70,70,70"
                        Click="btn_entries_Click"
                        ToolTip="Past Entries"
                        Style="{StaticResource DiamondButtonTheme}">
                        <Image Source="../Resources/entries_btn.png"/>
                    </Button>

                    <Button x:Name="btn_exit" DockPanel.Dock="Right" Margin="70,70,130,70"
                        Click="btn_exit_Click"
                        ToolTip="logout"
                        Style="{StaticResource DiamondButtonTheme}">
                        <Image Source="../Resources/exit_btn.png"></Image>
                    </Button>

                    <Button x:Name="btn_insights" Width="300" Height="300" Margin="0,0,0,0"
                        Click="btn_insights_Click"
                        ToolTip="Insights">

                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource DiamondButtonTheme}">
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation From="1" To="1" Duration="0:0:2" 
                                Storyboard.TargetProperty="Opacity" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Image Source="../Resources/insights_btn.png"></Image>
                    </Button>

                </DockPanel>
            </Grid>
        </Grid>
    </Border>
</Page>

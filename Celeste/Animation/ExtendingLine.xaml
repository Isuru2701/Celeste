<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Storyboard x:Key="ExtendingLineUp">
        <DoubleAnimation From="-100" To="-250" Duration="0:0:1" 
            Storyboard.TargetName="line" 
            Storyboard.TargetProperty="(Shape.Y2)"/>
    </Storyboard>

    <Storyboard x:Key="ExtendingLineDown">
        <DoubleAnimation From="100" To="250" Duration="0:0:1" 
            Storyboard.TargetName="line" 
            Storyboard.TargetProperty="(Shape.Y2)"/>
    </Storyboard>

    <Storyboard x:Key="ExtendingLineLeft">
        <DoubleAnimation From="100" To="250" Duration="0:0:1" 
            Storyboard.TargetName="line" 
            Storyboard.TargetProperty="(Shape.Y2)"/>
    </Storyboard>



</ResourceDictionary>
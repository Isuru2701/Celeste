<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celeste.Controls"
             xmlns:Templates="clr-namespace:Celeste.Templates"
            xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
            x:Class="Celeste.Controls.Chart"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="750">

    <Border BorderBrush="#d8c6a0"
            CornerRadius="20"
            BorderThickness="3">
        <Grid>

            <Border BorderBrush="#d8c6a0"
                    BorderThickness="0,0,0,1">

                <!--graph goes here -->
                <lvc:CartesianChart x:Name="SentimentGraph"
                                    Zoom="None"
                                    Series="{Binding Series}"/>



            </Border>


        </Grid>

    </Border>


</UserControl>

<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celeste.Controls"
             xmlns:tp="clr-namespace:RoyT.TimePicker;assembly=RoyT.TimePicker"
             xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="Celeste.Controls.TimePicker"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Loaded="UserControl_Loaded">

    <UserControl.Background>
        <SolidColorBrush Color="Black" Opacity="0.7"/>
    </UserControl.Background>

    <Grid>



        <Button x:Name="btn_back"
                Style="{StaticResource DiamondButtonTheme}" 
                Margin="39,365,891,365"
                Click="btn_back_Click">
            <Image Source="../Resources/back_btn.png"/>
        </Button>

        <tp:TimePicker
            x:Name="timepicker"
            Time="{Binding Time, Mode=OneTime}" 
            Width="700"
            Height="700"
            HourBrush="#d8c6a0"
            MinuteBrush="#d8c6a0"
            HourTickBrush="#d8c6a0"
            HourThickness="15"
            MinuteThickness="10">

        </tp:TimePicker>

        <Button
            x:Name="btn_meridian"
            Style="{StaticResource MenubuttonTheme}"
            Content="{Binding ElementName=timepicker, Path=Time.Meridiem}"
            Margin="830,0,0,0"
            Width="100" Click="btn_meridian_Click"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        </Button>

        <Button
            x:Name="btn_remove"
            Style="{StaticResource MenubuttonTheme}"
            Content="{Binding ElementName=timepicker, Path=Time.Meridiem}"
            Margin="830,200,0,0"
            Width="100" Click="btn_remove_Click"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        </Button>


        <Button x:Name="btn_save"
                Style="{StaticResource DiamondButtonTheme}" 
                Click="btn_save_Click" Margin="39,500,891,230">
            <Image Source="../Resources/save_btn.png"/>
        </Button>


        <Label x:Name="lbl_confirmation" 
               Content="Reminder &#xa;set &#xa;for"
               Visibility="Hidden" Margin="213,592,500,102"/>


        <Label Content="{Binding ElementName=timepicker, Path=Time.Hour}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="40" Margin="0,200,50,0"
               IsHitTestVisible="False"/>

        <Label Content="{Binding ElementName=timepicker, Path=Time.Minute}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               
               FontSize="40" Margin="0,300,50,0"
               IsHitTestVisible="False"/>

        <Label Content="{Binding ElementName=timepicker, Path=Time.Meridiem}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="70" Margin="200,240,50,0"
               IsHitTestVisible="False"/>


    </Grid>
</UserControl>
